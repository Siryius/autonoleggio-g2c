<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="it.unisa.tsw2.domain.Utente" table="UTENTE">
	
		<id name="idUtente" column="ID_UTENTE">
			<generator class="native"/>
		</id>
		<property name="codicefiscale" type="string" column="CF_UTENTE" unique="true" not-null="true"/>
		<property name="username" type="string" column="USERNAME_UTENTE"/>
		<property name="password" type="string" column="PASSWORD_UTENTE"/>
		<property name="tipo" type="string" column="TIPO_UTENTE"/>
			
		<!-- mappiamo ora le composizioni -->
		
		<component name="indirizzo"  class="it.unisa.tsw2.domain.Indirizzo">
			<property name="via" type="string" column="VIA"/>
			<property name="cap" type="string" column="CAP"/>
			<property name="ncivico" type="string" column="N_CIVICO"/>
			<property name="citta" type="string" column="CITTA"/>
			<property name="provincia" type="string" column="PROVINCIA"/>	
		</component>
		
		<!--Sotto classi -->
		
		<joined-subclass name="it.unisa.tsw2.domain.Staff" table="STAFF" >
			<key column="ID_STAFF"/>
			<property name="nome" type="string" column="NOME_STAFF"/>
			<property name="cognome" type="string" column="COGNOME_STAFF"/>
			<property name="competenza" type="string" column="COMPETENZA_STAFF" not-null="true"/>
		</joined-subclass>
		
		<joined-subclass name="it.unisa.tsw2.domain.Cliente" table="CLIENTE">
			<key column="ID_CLIENTE"/>
			
			<property name="nome" type="string" column="NOME_CLIENTE"/>
			<property name="cognome" type="string" column="COGNOME_CLIENTE"/>
			<property name="cartacredito" type="string" column="CARTACREDITO_CLIENTE"/>
			<property name="tipologia" type="string" column="TIPOLOGIA_CLIENTE"/>
			<property name="validita" type="date" column="VALIDITA_CLIENTE"/>
			
			<set name="prenotazioni" inverse="true">
        		<key column="FKID_CLIENTE"/>
        		<one-to-many class="it.unisa.tsw2.domain.Prenotazione"/>	
        	</set>
			
		</joined-subclass>
		
		<joined-subclass name="it.unisa.tsw2.domain.Azienda" table="AZIENDA">
			<key column="ID_AZIENDA"/>
			<property name="ragionesociale" type="string" column="RAGIONESOCIALE_AZIENDA" not-null="true"/>
			<property name="partitaiva" type="string" column="PARTITAIVA_AZIENDA" not-null="true"/>
			
			<component name="indirizzoOperativo"  class="it.unisa.tsw2.domain.Indirizzo">
			<property name="via" type="string" column="VIA"/>
			<property name="cap" type="string" column="CAP"/>
			<property name="ncivico" type="string" column="N_CIVICO"/>
			<property name="citta" type="string" column="CITTA"/>
			<property name="provincia" type="string" column="PROVINCIA"/>	
			</component>
		</joined-subclass>
        	
		
	</class>
</hibernate-mapping>