<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="it.unisa.tsw2.domain.Promozione" table="PROMOZIONE">
	
		<id name="idPromozione" column="ID_PROMOZIONE">
			<generator class="native"/>
		</id>
		<property name="nome" type="string" column="NOME_PROMOZIONE" unique="true" not-null="true"/>
		<property name="descrizione" type="string" column="DESCRIZIONE_PROMOZIONE"/>
		<property name="dataInizio" type="date" column="DATAINIZIO_PROMOZIONE"/>
		<property name="dataFine" type="date" column="DATAFINE_PROMOZIONE"/>
		<property name="sconto" type="integer" column="SCONTO_PROMOZIONE"/>
			
		
		<!-- mappiamo ora le associazioni -->
        
        <set name="sedi" table="SEDE_PROMOZIONE" lazy="true" inverse="true" cascade="save-update">
        	<key column="FKID_PROMOZIONE"/>
        	<many-to-many class="it.unisa.tsw2.domain.Sede" column="FKID_SEDE"/>
        </set>
        
        	
		
	</class>
</hibernate-mapping>