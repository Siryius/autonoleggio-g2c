<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="it.unisa.tsw2.domain.Sede" table="SEDE">
	
		<id name="idSede" column="ID_SEDE">
			<generator class="native"/>
		</id>
		<property name="nome" type="string" column="NOME_SEDE" unique="true" not-null="true"/>
			
		<!-- mappiamo ora le composizioni -->
		
		<component name="orari"  class="it.unisa.tsw2.domain.Orario">
			<property name="aperturaMatt" type="timestamp" column="APERTURA_MATT"/>
			<property name="chiusuraMatt" type="timestamp" column="CHIUSURA_MATT"/>
			<property name="aperturaPom" type="timestamp" column="APERTURA_POM"/>
			<property name="chiusuraPom" type="timestamp" column="CHIUSURA_POM"/>
		</component>
		
		<component name="indirizzo"  class="it.unisa.tsw2.domain.Indirizzo">
			<property name="via" type="string" column="VIA"/>
			<property name="cap" type="string" column="CAP"/>
			<property name="ncivico" type="string" column="N_CIVICO"/>
			<property name="stato" type="string" column="STATO"/>
			<property name="citta" type="string" column="CITTA"/>
			<property name="provincia" type="string" column="PROVINCIA"/>	
		</component>
		
		<!-- mappiamo ora le associazioni -->
		
		<set name="veicoli" table="VEICOLO" lazy="true" inverse="true" cascade="save-update">
        	<key column="FKID_SEDE"/>
        	<one-to-many class="it.unisa.tsw2.domain.Veicolo"/>
        </set>
        
        <!--  <set name="sedi" table="SEDE_SEDE" lazy="true" inverse="true" cascade="save-update">
        	<key column="ID_SEDE"/>
        	<many-to-many class="bean_hibernate.Sede" column="ID_SEDE"/>
        </set> --> 
        
        
        <set name="sedi" table="SEDE_SEDE" lazy="true" inverse="true" cascade="save-update">
        	<key column="ID_SEDE1"/>
        	<composite-element class="it.unisa.tsw2.domain.SedeSede">
        		<parent name="sede1"/>
        		<many-to-one name="sede2" class="it.unisa.tsw2.domain.Sede" column="ID_SEDE2" not-null="true"/>
        		<!-- <many-to-one name="sede2" class="it_progetto_tsw2_hibernate.Sede" column="ID_SEDE2" not-null="true"/> -->
        		<property name="km" column="KM" not-null="true"/>
        	</composite-element>
        </set>
        
        
        <set name="promozioni" table="SEDE_PROMOZIONE" lazy="true" inverse="true" cascade="save-update">
        	<key column="FKID_SEDE"/>
        	<many-to-many class="it.unisa.tsw2.domain.Promozione" column="FKID_PROMOZIONE"/>
        </set>
        
        <set name="prenotazioni" table="SEDE_PRENOTAZIONE" lazy="true" inverse="true" cascade="save-update">
        	<key column="FKID_SEDE"/>
        	<many-to-many class="it.unisa.tsw2.domain.Prenotazione" column="FKID_PRENOTAZIONE"/>
        </set>
        
        	
		
	</class>
</hibernate-mapping>